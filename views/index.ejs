const { Client, GatewayIntentBits } = require('discord.js');
const express = require('express');
const path = require('path');

const app = express();
const port = process.env.PORT || 3000;

// Konfigurasi Folder
app.set('view engine', 'ejs');
app.set('views', path.join(__dirname, 'views'));
app.use(express.static(path.join(__dirname, 'public')));

// Routes Navigasi
app.get('/', (req, res) => res.render('index'));
app.get('/dasboard', (req, res) => res.render('dasboard'));
app.get('/lobby_discord', (req, res) => res.render('lobby_discord'));

// Bot Discord
const client = new Client({ intents: [GatewayIntentBits.Guilds] });
const token = (process.env.TOKEN || '').replace(/['"]+/g, '');

if (token) {
    client.login(token).catch(() => console.log("Token belum valid di Railway Variables"));
}

app.listen(port, '0.0.0.0', () => {
    console.log(`ðŸš€ Server aktif di: nexa-bot-production.up.railway.app`);
});
